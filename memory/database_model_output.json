{
  "tables": [
    {
      "table_name": "Employees",
      "fields": [
        {
          "name": "employee_id",
          "type": "integer",
          "description": "Unique identifier for each employee"
        },
        {
          "name": "first_name",
          "type": "string",
          "description": "Employee's first name"
        },
        {
          "name": "last_name",
          "type": "string",
          "description": "Employee's last name"
        },
        {
          "name": "department",
          "type": "string",
          "description": "Department the employee belongs to"
        },
        {
          "name": "manager_id",
          "type": "integer",
          "description": "Unique identifier for the employee's manager"
        }
      ],
      "primary_key": "employee_id",
      "foreign_keys": [
        "manager_id"
      ],
      "description": "Table to store employee details"
    },
    {
      "table_name": "Reviews",
      "fields": [
        {
          "name": "review_id",
          "type": "integer",
          "description": "Unique identifier for each review"
        },
        {
          "name": "employee_id",
          "type": "integer",
          "description": "Employee who is being reviewed"
        },
        {
          "name": "review_date",
          "type": "date",
          "description": "Date of the review"
        },
        {
          "name": "review_status",
          "type": "string",
          "description": "Status of the review (draft, submitted, confirmed)"
        },
        {
          "name": "review_content",
          "type": "text",
          "description": "Content of the review"
        }
      ],
      "primary_key": "review_id",
      "foreign_keys": [
        "employee_id"
      ],
      "description": "Table to store review details"
    },
    {
      "table_name": "Goals",
      "fields": [
        {
          "name": "goal_id",
          "type": "integer",
          "description": "Unique identifier for each goal"
        },
        {
          "name": "employee_id",
          "type": "integer",
          "description": "Employee who the goal is set for"
        },
        {
          "name": "goal_description",
          "type": "text",
          "description": "Description of the goal"
        },
        {
          "name": "goal_status",
          "type": "string",
          "description": "Status of the goal (not started, in progress, completed)"
        },
        {
          "name": "goal_due_date",
          "type": "date",
          "description": "Due date for the goal"
        }
      ],
      "primary_key": "goal_id",
      "foreign_keys": [
        "employee_id"
      ],
      "description": "Table to store employee goals"
    }
  ],
  "notes": "The Employees table has a foreign key relationship with itself to represent the hierarchical reporting structure. The Reviews and Goals tables have a foreign key relationship with the Employees table. This model is normalized to avoid data redundancy and ensure data integrity."
}